    "version": "0.2.0",
    "configurations": [
        {
            "name": "Make",
            "command": "make",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Make & Run Dolphin",
            "command": "make && env QT_QPA_PLATFORM=xcb dolphin-emu WiiQuiz.dol",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Run Dolphin",
            "command": "dolphin-emu WiiQuiz.dol",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Make & Run Wii",
            "command": "make && WIILOAD=tcp:172.16.42.10 wiiload WiiQuiz.dol",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Run Wii",
            "command": "env QT_QPA_PLATFORM=xcb dolphin-emu WiiQuiz.dol",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}